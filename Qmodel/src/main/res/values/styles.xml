<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Dialog.DownloadDialogIconStyle" parent="AppBaseTheme">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@mipmap/ic_launcher</item>
    </style>

    <style name="Dialog.DownloadDialogTextStyle" parent="AppBaseTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- ActionBarTitleStyle -->
    <style name="TextView.ActionBarTitleStyle" parent="AppBaseTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- ActionBarTitleBarStyle -->
    <style name="ActionBarLayout.ActionBarTitleBarStyle" parent="AppBaseTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/background_material_dark</item>
    </style>
    <!-- ActionBarMenuStyle -->
    <style name="ActionBarMenu.ActionBarMenuStyle" parent="AppBaseTheme">
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>